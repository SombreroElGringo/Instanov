{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "rootDirs": ["server", "."],
      "paths": {
        "*": [
          "./*",
          "./server/*",
          "node_modules/*"
        ]
      }
    },
    "include": [
        "server/**/*"
    ]
  }